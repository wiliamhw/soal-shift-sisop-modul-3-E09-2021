{
    "version": "2.0.0",
    "tasks": [
        // LINUX
        // Build C/C++ active file
        {
            "type": "shell",
            "label": "LINUX build C/C++ active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "-pthread",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },

        // Build C thread active file
        {
            "type": "shell",
            "label": "LINUX build C thread active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "-pthread",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },

        // Build C project
        {
            "type": "shell",
            "label": "LINUX build C project",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${fileDirname}/*.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },

        // Build C++ project
        {
            "type": "shell",
            "label": "LINUX build C++ project",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${fileDirname}/*.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ],
   }
